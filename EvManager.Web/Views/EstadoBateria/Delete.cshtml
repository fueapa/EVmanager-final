@model EvManager.Web.Models.EstadoBateria

@{
    ViewData["Title"] = "Eliminar Estado de Batería";
}

<h1>Eliminar Estado de Batería</h1>

<h3>¿Estás seguro de que quieres eliminar este estado?</h3>
<div>
    <h4>Estado de Batería</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Vehículo</dt>
        <dd class="col-sm-10">@Model.VehiculoId</dd>
        <dt class="col-sm-2">Nivel de Carga (%)</dt>
        <dd class="col-sm-10">@Model.NivelCarga</dd>
        <dt class="col-sm-2">Última Actualización</dt>
        <dd class="col-sm-10">@Model.UltimaActualizacion.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>