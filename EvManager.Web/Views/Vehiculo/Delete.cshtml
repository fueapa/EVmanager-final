@model EvManager.Web.Models.Vehiculo

<div class="container">
    <h1 class="text-center">Eliminar Vehículo</h1>

    <h4 class="text-center text-muted mb-4">¿Estás seguro de que deseas eliminar este vehículo?</h4>

    <div class="mb-4">
        <h5 class="text-primary">Detalles del Vehículo</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 text-end fw-semibold">@Html.DisplayNameFor(model => model.Marca)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

            <dt class="col-sm-3 text-end fw-semibold">@Html.DisplayNameFor(model => model.Modelo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Modelo)</dd>

            <dt class="col-sm-3 text-end fw-semibold">@Html.DisplayNameFor(model => model.Matricula)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Matricula)</dd>

            <dt class="col-sm-3 text-end fw-semibold">@Html.DisplayNameFor(model => model.CapacidadBateria)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CapacidadBateria)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
        </a>
    </form>
</div>
