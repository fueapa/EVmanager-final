@model EvManager.Web.Models.Vehiculo

<h1>Editar Vehículo</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Marca" class="control-label"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Modelo" class="control-label"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Matricula" class="control-label"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CapacidadBateria" class="control-label"></label>
        <input asp-for="CapacidadBateria" class="form-control" />
        <span asp-validation-for="CapacidadBateria" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}