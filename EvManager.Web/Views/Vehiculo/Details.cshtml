@model EvManager.Web.Models.Vehiculo

<div class="container">
    <h1>Detalles del Vehículo</h1>

    <h4 class="mb-3">Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Marca)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Modelo)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Matricula)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CapacidadBateria)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CapacidadBateria) kWh
        </dd>
    </dl>

    <div class="form-group text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>
